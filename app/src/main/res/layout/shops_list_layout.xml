<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="1dp"
    app:cardElevation="15dp"
    android:id="@+id/cardView"
    tools:ignore="RtlCompat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:scrollbars="vertical"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp">


            <TextView
                android:id="@+id/shopname"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:hint="Shop Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="serif"
               />


            <TextView
                android:id="@+id/shop_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/darkblue"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/locationtwo"
                android:hint="  Shop Location"
                android:textAlignment="center"
                android:textSize="15sp"
                android:typeface="serif" />







        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottomcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/shop_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/telephone"
                android:hint="    Shop Phone"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:typeface="serif" />


            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hotel_rates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="1dp"
                android:hint="Rates"
                android:textAlignment="center"
                android:textColor="@color/green_dark"
                android:textSize="20sp"
                android:typeface="serif" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="1dp"
                android:hint="Shop Description"
                android:textAlignment="center"
                android:textSize="15sp"
                android:typeface="serif" />


            <Button
                android:id="@+id/view_button"
                android:layout_width="197dp"
                android:layout_height="29dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttons_backgound"
                android:backgroundTint="@color/colorAccent"
                android:gravity="center"
                android:text=" View More details"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp"></Button>
        </LinearLayout>






    </LinearLayout>


</androidx.cardview.widget.CardView>