<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/thin_black_outline">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_user_name"
                android:layout_width="195dp"
                android:layout_height="match_parent"
                android:paddingLeft="10sp"
                android:text="User name"
                android:textColor="@color/common_google_signin_btn_text_light_default"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:paddingLeft="10sp"
                android:text="User Phone"
                android:textAlignment="viewEnd"
                android:textColor="@color/common_google_signin_btn_text_light_default"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_total_price"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:text="Date:  "
                        android:textColor="@color/common_google_signin_btn_text_light_pressed"></TextView>


                    <TextView
                        android:id="@+id/order_datetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_total_price"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:text="Order Date"></TextView>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_total_price"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:text="Time:  "
                        android:textColor="@color/common_google_signin_btn_text_light_pressed"></TextView>


                    <TextView
                        android:id="@+id/order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_total_price"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:text="Order Time"></TextView>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_number"
                        android:layout_margin="5dp"
                        android:text="Status: "
                        android:textColor="@color/common_google_signin_btn_text_light_pressed" />


                    <TextView
                        android:id="@+id/payment_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_number"
                        android:layout_margin="5dp"
                        android:text="Pending. "
                        android:textColor="@color/green_dark"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/order_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_datetime"
                    android:layout_margin="5dp"
                    android:text="Order Number"></TextView>


                <TextView
                    android:id="@+id/check_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_number"
                    android:layout_margin="5dp"
                    android:text="Check-IN"
                    android:textColor="@color/common_google_signin_btn_text_light_pressed" />


                <TextView
                    android:id="@+id/check_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_number"
                    android:layout_margin="5dp"
                    android:text="Check-Out"
                    android:textColor="@color/common_google_signin_btn_text_light_pressed" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/order_total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_product_quantity"
                android:layout_marginTop="26dp"
                android:background="@color/darkblue_dark"
                android:text="Total = 1,200"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="UnknownId" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/payButton"
                    android:layout_width="193dp"
                    android:layout_height="43dp"
                    android:layout_below="@+id/order_number"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittextboxbackgroud"
                    android:gravity="center"
                    android:text="Confirm Order "
                    android:textAlignment="center"

                    android:textColor="@color/colorAccent"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/view_details"
                    android:layout_width="174dp"
                    android:layout_height="43dp"
                    android:layout_below="@+id/order_number"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="View Content "
                    android:textAlignment="center"
                    android:textSize="20sp" />


            </LinearLayout>




        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>